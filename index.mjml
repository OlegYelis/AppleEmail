      .card__link:hover, .card__link:focus { color: #FFFFFF; } .footer {
      display: flex; align-items: start; justify-content: space-between;
      flex-wrap: wrap; } .footer__left { margin-bottom: 20px; } .footer__title {
      font-family: 'Inter'; font-weight: 600; font-size: 18px; line-height:
      22px; color: #0C1014; margin: 0 0 8px 0;} .footer__txt { font-family:
      'Inter'; font-style: normal; font-weight: 400; font-size: 11px;
      line-height: 20px; color: #515759; width: 158px; margin: 0 0 21px 0;}
      .footer__list { list-style: none; display: flex; align-items: center;
      justify-content: flex-start; padding: 0; } .footer__item:not(:last-child)
